# BoonLink Configuration

# Demo mode (uses mock services)
BOONLINK_DEMO=true

# Default token for payments
BOONLINK_DEFAULT_TOKEN=USDT

# Maximum single payment amount in THB
BOONLINK_MAX_AMOUNT=10000

# Enable offline transaction queue
BOONLINK_OFFLINE_QUEUE=true

# BSC RPC URL (for production)
# BOONLINK_RPC_URL=https://bsc-dataseed.binance.org

# Collection wallet address (where crypto is received)
# BOONLINK_COLLECTION_ADDRESS=0x...

# Exchange API (optional, defaults to CoinGecko)
# BOONLINK_EXCHANGE_API=bitkub

# Settlement API (for PromptPay integration)
# SETTLEMENT_API_URL=https://api.settlement.example
# SETTLEMENT_API_KEY=your-api-key

# Database path
BOONLINK_DB_PATH=./data/boonlink.db
